            e.preventDefault();    
            let data = $(this).serialize();
              
               $.ajax({
                   url: "schedule/create",
                   type: "POST",
                   data: data,                  
                //    contentType: 'json',
                //    dataType:'application/json',
                  
                   success: function(response) {
                    getteam();
                        console.log(response);
                   },
                   error: function(jqXHR, textStatus, errorMessage) {
                       
                   }
       
               });
        });
        <% } %>
        function getteam(){
            $.ajax({
                url: "/schedule/get",
